<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>EmployeeDataManager</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>Registration</servlet-name>
  <servlet-class>com.auth.Register</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Registration</servlet-name>
  <url-pattern>/register</url-pattern>
  </servlet-mapping>
    <servlet>
  <servlet-name>LoginPage</servlet-name>
  <servlet-class>com.auth.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LoginPage</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
   <servlet-name>LO</servlet-name>
  <servlet-class>com.practices27.LogOutPage</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LO</servlet-name>
  <url-pattern>/logoutPage</url-pattern>
  </servlet-mapping>
  
    <session-config>
    <session-timeout>-1</session-timeout> <!-- No timeout -->
</session-config>
  
  <context-param>
  <param-name>driver</param-name>
  <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
   <context-param>
  <param-name>dburl</param-name>
  <param-value>jdbc:mysql://localhost:3386/collage</param-value>
  </context-param>
  
   <context-param>
  <param-name>dbuserName</param-name>
  <param-value>root</param-value>
  </context-param>
  
  <context-param>
  <param-name>dbpassword</param-name>
  <param-value>@pankaj123</param-value>
  </context-param>
</web-app>